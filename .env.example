# ChatterFix CMMS Environment Configuration
# Copy this file to .env and fill in your values

# GitHub Configuration
GITHUB_PAT=your_github_personal_access_token_here

# GCP Configuration
GCLOUD_PROJECT=fredfix
GCP_PROJECT_ID=fredfix

# AI Service Configuration (Optional - for microservices mode)
AI_BRAIN_SERVICE_URL=http://localhost:8005
DOCUMENT_INTELLIGENCE_URL=http://localhost:8006

# AI API Keys (Optional - required for AI features)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
XAI_API_KEY=your_xai_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./chatterfix.db

# Ollama Configuration (automatically configured in Docker)
OLLAMA_HOST=http://ollama:11434
OLLAMA_BASE_URL=http://ollama:11434

# Service Mode (default, unified_backend, unified_ai)
SERVICE_MODE=default

# Port Configuration
PORT=8080
