# ChatterFix CMMS Environment Configuration Template
# Copy to .env and fill in your actual values

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=debug
PORT=8080

# Security Keys (NEVER commit real keys to git)
SECRET_KEY=your-super-secret-key-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars
ENCRYPTION_KEY=your-encryption-key-32-bytes

# Database Configuration
USE_FIRESTORE=true
FIRESTORE_PROJECT_ID=your-project-id
FIRESTORE_DATABASE_URL=https://your-project.firebaseio.com

# Firebase Admin SDK (use service account key file)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# AI Service API Keys
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Cloud Deployment
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
CLOUD_SQL_CONNECTION_NAME=your-cloud-sql-connection

# Monitoring and Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
LOG_RETENTION_DAYS=30

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
RATE_LIMIT_PER_MINUTE=100
MAX_UPLOAD_SIZE=10485760

# Voice and OCR Services
SPEECH_TO_TEXT_API_KEY=your-speech-api-key
OCR_SERVICE_API_KEY=your-ocr-api-key

# Development Tools
ENABLE_DEBUG_TOOLBAR=true
ENABLE_PROFILING=false