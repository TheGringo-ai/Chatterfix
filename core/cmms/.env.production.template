# ChatterFix CMMS Mars-Level AI Platform - Production Environment Variables
# ðŸš€ Copy this to .env.production and fill in your actual values

# Application Configuration
ENVIRONMENT=production
PORT=8080
LOG_LEVEL=INFO
DEBUG=false

# Database Configuration
DATABASE_PATH=/app/data/cmms_production.db

# Security Configuration
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-here-256-bits
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# AI Provider API Keys (REQUIRED)
XAI_API_KEY=your-grok-xai-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here-optional

# AI Provider Configuration
XAI_BASE_URL=https://api.x.ai/v1
XAI_MODEL=grok-4-latest
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
HUGGINGFACE_BASE_URL=https://api-inference.huggingface.co/models
HUGGINGFACE_MODEL=microsoft/DialoGPT-large

# Local AI Configuration
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3

# Redis Configuration (for Quantum Analytics)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-redis-password-if-needed

# Monitoring Configuration
GRAFANA_PASSWORD=your-secure-grafana-admin-password

# Cloud Provider Configuration (AWS/GCP/Azure)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_DEFAULT_REGION=us-west-2

# GCP_PROJECT_ID=your-gcp-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
# AZURE_CLIENT_ID=your-azure-client-id
# AZURE_CLIENT_SECRET=your-azure-client-secret
# AZURE_TENANT_ID=your-azure-tenant-id

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Mars-Level AI Features
ENTERPRISE_AI_BRAIN_ENABLED=true
QUANTUM_ANALYTICS_ENABLED=true
AUTONOMOUS_OPERATIONS_ENABLED=true
NEURAL_ARCHITECTURE_SEARCH_ENABLED=false
FEDERATED_LEARNING_ENABLED=false
DIGITAL_TWINS_ENABLED=false

# Performance Configuration
GUNICORN_WORKERS=4
GUNICORN_WORKER_CONNECTIONS=1000
GUNICORN_MAX_REQUESTS=1000
GUNICORN_TIMEOUT=300

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/app/logs/cmms.log
ACCESS_LOG_FILE=/app/logs/access.log
ERROR_LOG_FILE=/app/logs/error.log

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Security Headers
SECURITY_HEADERS_ENABLED=true
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=200

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,pdf,doc,docx,txt
UPLOAD_PATH=/app/media/uploads

# Session Configuration
SESSION_SECRET_KEY=your-session-secret-key-here
SESSION_TIMEOUT=3600  # 1 hour

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/app/backups