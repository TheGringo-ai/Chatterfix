# ChatterFix CMMS Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===== API KEYS =====
# OpenAI API Key (get from https://platform.openai.com/)
OPENAI_API_KEY=your-openai-api-key-here

# xAI/Grok API Key (get from https://x.ai/)
XAI_API_KEY=your-xai-api-key-here

# Anthropic API Key (get from https://console.anthropic.com/)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ===== DATABASE =====
# PostgreSQL connection (for production)
DATABASE_URL=postgresql://username:password@localhost:5432/chatterfix_cmms

# SQLite path (for development)
DATABASE_PATH=./cmms.db

# ===== SERVER CONFIGURATION =====
CMMS_PORT=8000
DEBUG=false
ENVIRONMENT=production

# ===== AI CONFIGURATION =====
# AI Provider: openai, anthropic, xai, ollama
AI_PROVIDER=xai

# Ollama Configuration (if using local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# ===== SECURITY =====
JWT_SECRET_KEY=your-jwt-secret-key-here
SESSION_SECRET=your-session-secret-here

# ===== GOOGLE CLOUD (for deployment) =====
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1