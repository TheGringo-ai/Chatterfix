# ChatterFix CMMS Collaborative AI Configuration
# Copy values to your main .env file to enable collaborative AI features

# OpenAI API Configuration (ChatGPT-4)
# Get your API key from: https://platform.openai.com/account/api-keys
# OPENAI_API_KEY=sk-your-openai-api-key-here

# Grok AI API Configuration (X.AI)
# Get your API key from: https://x.ai/api or https://console.x.ai/
GROK_API_KEY=your-grok-api-key-here
# Alternative environment variable name:
XAI_API_KEY=your-xai-api-key-here

# Anthropic Claude API Configuration (Optional - we're already running in Claude)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# RAG System Configuration
RAG_MEMORY_DB_PATH=./data/ai_memory.db
KNOWLEDGE_BASE_ENABLED=true

# Collaborative AI Features
ENABLE_MULTI_AI_QUERIES=true
ENABLE_AI_MEMORY=true
ENABLE_CONVERSATION_HISTORY=true
ENABLE_RESPONSE_SYNTHESIS=true

# Development AI Assistant
DEV_AI_ASSISTANT_ENABLED=true
DEV_CONTEXT_STORAGE=./data/dev_context.db

# Performance Settings
AI_QUERY_TIMEOUT=30
MAX_CONCURRENT_AI_CALLS=3
MEMORY_SEARCH_LIMIT=10

# Logging
AI_COLLABORATION_LOG_LEVEL=INFO
STORE_AI_INTERACTIONS=true